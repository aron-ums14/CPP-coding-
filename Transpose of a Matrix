/*Part 2: Transpose of a Matrix
Logic:

Transpose means flipping rows into columns.
If the matrix is 3×2, the transpose is 2×3.
Rule: element at [i][j] → [j][i].

*/


#include <iostream>
using namespace std;

int main() {
    int rows = 3, cols = 2;
    int matrix[3][2];

    // Fill the matrix
    cout << "Enter elements of 3x2 matrix:" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matrix[i][j];
        }
    }

    // Transpose (2x3)
    int transpose[2][3];
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            transpose[j][i] = matrix[i][j];
        }
    }

    // Display original
    cout << "\nOriginal Matrix (3x2):" << endl;
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    // Display transpose
    cout << "\nTranspose Matrix (2x3):" << endl;
    for (int i = 0; i < cols; i++) {
        for (int j = 0; j < rows; j++) {
            cout << transpose[i][j] << " ";
        }
        cout << endl;
    }

    return 0;
}
