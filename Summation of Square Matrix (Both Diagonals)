/*

Part 1: Summation of Square Matrix (Both Diagonals)

Logic:

A square matrix means rows = columns (like 3×3, 4×4, etc.)
Main diagonal  goes from top-left to bottom-right (index [i][i]).
Secondary diagonal  goes from top-right to bottom-left (index [i][n-1-i])

*/




#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Enter size of square matrix (n): ";
    cin >> n;

    int matrix[n][n];

    // Fill the matrix
    cout << "Enter elements of the matrix:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matrix[i][j];
        }
    }

    // Compute sums
    int mainDiagonal = 0, secondaryDiagonal = 0;
    for (int i = 0; i < n; i++) {
        mainDiagonal += matrix[i][i];           // (row = col)
        secondaryDiagonal += matrix[i][n - 1 - i]; // (col shrinks)
    }

    // Display results
    cout << "\nMatrix:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }

    cout << "\nSum of Main Diagonal = " << mainDiagonal << endl;
    cout << "Sum of Secondary Diagonal = " << secondaryDiagonal << endl;

    return 0;
}


/*
Enter size of square matrix (n): 3
Element [0][0]: 1
Element [0][1]: 2
Element [0][2]: 3
Element [1][0]: 4
Element [1][1]: 5
Element [1][2]: 6
Element [2][0]: 7
Element [2][1]: 8
Element [2][2]: 9

Matrix:
1 2 3
4 5 6
7 8 9

Sum of Main Diagonal = 1+5+9 = 15
Sum of Secondary Diagonal = 3+5+7 = 15

*/
